<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <View
        android:id="@+id/holiday_list_layout_item_view"
        android:layout_width="1.5dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="9dp"
        android:background="#AD1A19" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/holiday_list_layout_item_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="11"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/holiday_list_layout_item_tv2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="22222"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_top_item" />

        <TextView
            android:id="@+id/holiday_list_layout_item_tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.2"
            android:gravity="center"
            android:minLines="2"
            android:text="33333"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_top_item" >
        </TextView>
    </LinearLayout>

</LinearLayout>