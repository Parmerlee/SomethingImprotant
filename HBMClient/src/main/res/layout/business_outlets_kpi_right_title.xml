<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/type"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/business_outlets_kpi_row_height"
        android:background="@drawable/rectangle_with_line_shape"
        android:gravity="center"
        android:textColor="@color/blue"
        android:text="社会渠道" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/business_outlets_kpi_row_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/columnName1"
            android:paddingLeft="@dimen/dimen1"
            android:layout_width="@dimen/business_outlets_kpi_column_1_width"
            android:layout_height="fill_parent"
            android:background="@drawable/rectangle_with_line_shape"
            android:gravity="center"
            android:text="当日值" />


        <TextView
            android:id="@+id/columnName3"
            android:paddingLeft="@dimen/dimen1"
            android:layout_width="@dimen/business_outlets_kpi_column_1_width"
            android:layout_height="fill_parent"
            android:background="@drawable/rectangle_with_line_shape"
            android:gravity="center"
            android:text="日累计值" />

    </LinearLayout>

</LinearLayout>