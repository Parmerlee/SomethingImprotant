<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/text"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/text_small_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="1dp"
        android:layout_toLeftOf="@+id/rank_count"
        android:layout_toRightOf="@+id/text"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/rank_bar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateOnly="false"
            android:maxHeight="15dp"
            android:minHeight="15dp"
            android:padding="2dip"
            android:progressDrawable="@drawable/progressbar_1" />

        <ProgressBar
            android:id="@+id/rank_bar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateOnly="false"
            android:maxHeight="15dp"
            android:minHeight="15dp"
            android:padding="2dip"
            android:progressDrawable="@drawable/progressbar_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rank_count"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rank_num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/text_small_style" />

        <TextView
            android:id="@+id/rank_num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/text_small_style" />
    </LinearLayout>

</RelativeLayout>