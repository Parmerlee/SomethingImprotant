<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_module_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/id_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/text_value_style"/>

    <TextView
        android:id="@+id/id_rank"
        android:textAppearance="@style/text_small_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_scale_value"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/text_value_style"/>

    <TextView
        android:id="@+id/id_scale_key"
        android:textAppearance="@style/text_small_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>