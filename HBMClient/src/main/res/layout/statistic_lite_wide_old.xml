<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/statistic_lite_key1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:tag="key"
        android:textColor="#ff000000"
        android:textSize="16sp" />

    <com.bonc.mobile.hbmclient.terminal.view.NumberCounterView
        android:id="@+id/statistic_number1_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10px"
        android:layout_marginRight="13px"
        android:gravity="right"
        android:tag="value" >
    </com.bonc.mobile.hbmclient.terminal.view.NumberCounterView>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/home_split_lite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/statistic_lite_key2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginLeft="10px"
                    android:tag="key"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

                <com.bonc.mobile.hbmclient.terminal.view.NumberCounterViewMini
                    android:id="@+id/statistic_number1_count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    
                    android:layout_marginRight="11px"
                    android:gravity="right"
                    android:tag="value" >
                </com.bonc.mobile.hbmclient.terminal.view.NumberCounterViewMini>
            </LinearLayout>

            <include layout="@layout/statistic_lite_include_item_old" />

            <include layout="@layout/statistic_lite_include_item_old" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:layout_marginTop="10px"
                    android:tag="key"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

                <com.bonc.mobile.hbmclient.terminal.view.NumberCounterViewMini
                    android:id="@+id/statistic_number2_count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10px"
                    android:gravity="right"
                    android:tag="value" >
                </com.bonc.mobile.hbmclient.terminal.view.NumberCounterViewMini>
            </LinearLayout>

            <include layout="@layout/statistic_lite_include_item_old" />

            <include layout="@layout/statistic_lite_include_item_old" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16px" />
        </LinearLayout>
    </LinearLayout>


</merge>