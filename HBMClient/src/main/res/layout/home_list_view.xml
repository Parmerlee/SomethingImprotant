<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="75dip">
	    
	    <ImageView
	        android:id="@+id/ImageViewItem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dip"
	        android:layout_centerVertical="true" 
	        android:src="@mipmap/home_second_tongx"
	        android:visibility="gone"
	        />
	
	    <LinearLayout
	        android:orientation="vertical"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="22dip"
	        android:layout_toRightOf="@id/ImageViewItem"
	        android:layout_centerVertical="true">
	        <TextView
	            android:id="@+id/TextViewItem"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:shadowColor="#ffffff"
	            android:shadowDx="2"
	            android:shadowDy="2"
	            android:textStyle="bold"
	            android:textColor="#252626"
	            android:textSize="20dip"
	            android:text="通信收入"/>
	
	        <!-- android:layout_alignLeft="@id/TextViewItem"  -->
	        
	        <TextView
	            android:id="@+id/TextViewDate"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#828282"
		        android:textSize="13.5dip"
		        android:text="日期加载中..."/>
	    </LinearLayout>
	    <ImageView
	        android:id="@+id/ImageViewProgress"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:src="@mipmap/ic_daydep_menu_icon_go"
	        android:layout_marginRight="8dp" />
	
	    <ProgressBar
	        android:id="@+id/loadProgressBar"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="19dp"
	        android:layout_height="18dp"
	        android:layout_width="18dp"
	        android:visibility="visible" />
	</RelativeLayout>
</RelativeLayout>