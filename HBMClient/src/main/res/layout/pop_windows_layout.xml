<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/pop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg"
        android:padding="5dp"
        android:text="111111111"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@mipmap/divider_hor"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        android:showDividers="middle" >

        <TextView
            android:id="@+id/pop_type_title"
            style="@style/order_item_tv_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/common_bg"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="资费类型"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pop_content_title"
            style="@style/order_item_tv_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/common_bg"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="资费案主要信息"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:divider="@mipmap/divider_hor"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:showDividers="middle" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pop_type_content"
                style="@style/order_item_tv_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/pop_market_title"
                style="@style/order_item_tv_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/common_bg"
                android:gravity="center_vertical"
                android:text="细分市场"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pop_market_detail"
                style="@style/order_item_tv_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </LinearLayout>

        <ListView
            android:id="@+id/pop_listView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:cacheColorHint="#00000000"
            android:divider="#FFFFFF"
            android:dividerHeight="4dp"
            android:listSelector="#00000000"
            android:paddingBottom="4dp"
            android:scrollbars="none"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pop_content"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>