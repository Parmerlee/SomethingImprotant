<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_item_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29.3dip"
            android:background="@mipmap/home_terminal"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.6dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/home_item_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#ffffff"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:textColor="#252626"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ic_new"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_alignTop="@id/home_item_tv1"
                    android:layout_toRightOf="@id/home_item_tv1"
                    android:background="@mipmap/ic_new2"
                    android:orientation="horizontal"
                    android:visibility="gone" >
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/home_item_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dip"
                android:textColor="#828282"
                android:textSize="13.5dip"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>