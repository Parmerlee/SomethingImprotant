<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/statistic_lite_key1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:tag="key"
        android:textColor="#ff000000"
        android:textSize="16dp" />

    <com.bonc.mobile.hbmclient.terminal.view.NumberCounterView
        android:id="@+id/statistic_number1_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="13dp"
        android:gravity="right"
        android:tag="value" >
    </com.bonc.mobile.hbmclient.terminal.view.NumberCounterView>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/home_split_lite" />
<FrameLayout 
      android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/statistic_wide_left_layout"
            android:layout_width="match_parent"
            android:layout_height="156.5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/statistic_lite_key2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:tag="key"
                    android:textColor="#ff000000"
                    android:textSize="16dp" />

                <com.bonc.mobile.hbmclient.terminal.view.NumberCounterView
                    android:id="@+id/statistic_number1_count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="11dp"
                    android:gravity="right"
                    android:tag="value" >
                </com.bonc.mobile.hbmclient.terminal.view.NumberCounterView>     
                                                               
            </LinearLayout>

            <include layout="@layout/statistic_lite_include_item" />

            <include layout="@layout/statistic_lite_include_item" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statistic_wide_right_layout"
            android:layout_width="match_parent"
           android:layout_height="156.5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:tag="key"
                    android:textColor="#ff000000"
                    android:textSize="16dp" />

                <com.bonc.mobile.hbmclient.terminal.view.NumberCounterView
                    android:id="@+id/statistic_number2_count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:tag="value" >
                </com.bonc.mobile.hbmclient.terminal.view.NumberCounterView>
            </LinearLayout>

            <include layout="@layout/statistic_lite_include_item" />

            <include layout="@layout/statistic_lite_include_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />
        </LinearLayout>
 </LinearLayout>
        <LinearLayout
            android:id="@+id/statistic_wide_largetext_layout"
            android:layout_width="fill_parent"
            android:layout_height="156.5dp"
    
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/statistic_month_stock_label_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:tag="key"                   
                    android:textColor="#ff000000"
                    android:textSize="16dp" />
       
                <com.bonc.mobile.hbmclient.terminal.view.NumberCounterView
                    android:id="@+id/statistic_month_stock_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:gravity="right"                   
                   
                    android:tag="value" >
                </com.bonc.mobile.hbmclient.terminal.view.NumberCounterView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/statistic_month_resist_label_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:tag="key"
                    android:textColor="#ff000000"
                    android:textSize="16dp" />

                <com.bonc.mobile.hbmclient.terminal.view.NumberCounterView
                    android:id="@+id/statistic_month_resist_days_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
               android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:gravity="right"  
                    android:tag="value" >
                </com.bonc.mobile.hbmclient.terminal.view.NumberCounterView>
            </LinearLayout>
 
        </LinearLayout>
   
    </FrameLayout>

</merge>