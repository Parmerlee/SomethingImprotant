<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal" >

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@mipmap/divider_hor" />

    <com.bonc.mobile.hbmclient.view.LineTrendView
        android:id="@+id/id_trend_chart"
        android:layout_width="100dp"
        android:layout_height="fill_parent" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@mipmap/divider_hor" />

    <LinearLayout
        android:id="@+id/id_container_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/index_value"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="当日值"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@mipmap/divider_hor" />

        <TextView
            android:id="@+id/col1_value"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@mipmap/divider_hor" />

        <TextView
            android:id="@+id/col2_value"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@mipmap/divider_hor" />

        <TextView
            android:id="@+id/col3_value"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@mipmap/divider_hor" />
    </LinearLayout>

</LinearLayout>