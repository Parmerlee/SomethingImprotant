<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/icon_rectangle_gray_hor_long"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/group_title"
        android:layout_width="@dimen/broad_width_first"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#ff006fcd"
        android:textSize="12dp" />

    <com.bonc.mobile.hbmclient.view.LinkageHScrollView
        android:id="@+id/index_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="horizontal"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/broad_width_second"
                android:layout_height="match_parent"
                android:gravity="center_horizontal" >

                <Button
                    android:id="@+id/trend_analyze"
                    android:layout_width="75dp"
                    android:layout_height="34dp"
                    android:background="@mipmap/button_term_trend"
                    android:text="趋势对比"
                    android:textColor="#ffffffff"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/broad_width_third"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="地区Top3"
                android:textColor="#ff006fcd"
                android:textSize="13dp" />

            <TextView
                android:layout_width="@dimen/broad_width_third"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="机型Top3"
                android:textColor="#ff006fcd"
                android:textSize="13dp" 
                android:visibility="gone"/>
        </LinearLayout>
    </com.bonc.mobile.hbmclient.view.LinkageHScrollView>

</LinearLayout>