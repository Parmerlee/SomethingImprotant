<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="NoTitle_Dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="mainkpi_title_style">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mainkpi_title_style2">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="kpi_first_level_style">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#ff005092</item>
    </style>

    <style name="kpi_second_level_style">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ff373737</item>
    </style>

    <style name="mainkpi_name_style" parent="kpi_first_level_style"></style>

    <style name="text_title_style">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/title_text</item>
    </style>

    <style name="text_title_small_style">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/title_text</item>
    </style>

    <style name="text_large_style">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_larger_style">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_normal_style">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_small_style">
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="li_text_style">
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">#252626</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="child_li_text_style">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
</resources>