<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:layout_alignParentBottom="true"
    android:gravity="bottom|center_horizontal"
    android:orientation="horizontal"
    android:paddingTop="3dp" >

    <ImageView
        android:id="@+id/page_down"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:scaleType="center"
        android:src="@mipmap/icon_page_up"
        android:visibility="gone" />

    <com.bonc.mobile.common.view.DataChooseButton
        android:id="@+id/area_button"
        android:layout_width="75dp"
        android:layout_height="fill_parent"
        android:background="@mipmap/button_bg_blue_kpi"
        android:gravity="center"
        android:singleLine="true"
        android:text="---"
        android:textColor="#FFFFFF"
        android:textSize="13dp" />

    <com.bonc.mobile.common.view.DatePickerButton
        android:id="@+id/date_button"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:background="@mipmap/button_bg_blue_kpi"
        android:gravity="center"
        android:singleLine="true"
        android:text="---"
        android:textColor="#FFFFFF"
        android:textSize="13dp" />

    <LinearLayout
        android:id="@+id/wheel_button"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/wheel_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/textview_broder"
            android:gravity="center_vertical|left"
            android:padding="1dp"
            android:text="---"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/wheel_button2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|left"
            android:padding="3dp"
            android:text="---"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/page_up"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:scaleType="center"
        android:src="@mipmap/icon_page_down"
        android:visibility="gone" />

    <TextView
        android:id="@+id/search_button"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:background="@mipmap/button_bg_blue_kpi"
        android:gravity="center"
        android:text="搜索"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:visibility="gone" />

</LinearLayout>